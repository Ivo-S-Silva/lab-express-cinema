<h1>Editing: {{title}}</h1>

<form action="/movies/{{_id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{title}}" required />
  </label>
<br>
  <label> Director:
    <input type="text" name="director" value="{{director}}"/>
  </label>
<br>
  <label> Stars:
      <br>
    <input name="stars" type="text" value="{{#each stars}}{{this}},{{/each}}">
  </label>
<br>
  <label> Rate:
    <input type="number" name="rating" min="1" max="10" value="{{book.rating}}"/>
  </label>
<br>
  <button type="submit"> Edit </button>
</form>