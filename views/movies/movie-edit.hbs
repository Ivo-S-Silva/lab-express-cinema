<h1>Editing: {{title}}</h1>

<form action="/movie/{{_id}}/edit" method="POST">
  <label> Title:
    <input type="text" name="title" value="{{title}}" required />
  </label>
<br>
  <label> Director:
    <input type="text" name="director" value="{{director}}"/>
  </label>
<br>
  <label> Stars:
      <br>
    <input name="stars" type="text" value="{{#each stars}}{{this}},{{/each}}">
    Insert stars names, separated by commas;
  </label>
<br>
  <label> Description:
<textarea name="description" cols="30" rows="4">{{description}}</textarea>  </label>
<br>
  <button type="submit"> Edit </button>
</form>